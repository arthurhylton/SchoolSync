<Window x:Class="SchoolSync.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SchoolSync" Height="650" Width="825">
    <DockPanel>
        <StackPanel>
            <TextBlock Text="{Binding ElementName=ChangesDataGrid, Path=Items.Count, StringFormat='Changes Found: {0}'}" />
            <DataGrid x:Name="ChangesDataGrid" ItemsSource="{Binding Path=Changes}" CanUserAddRows="False" CanUserDeleteRows="False" CanUserReorderColumns="False" AutoGenerateColumns="True" Height="250" />

        </StackPanel>
    </DockPanel>
</Window>
